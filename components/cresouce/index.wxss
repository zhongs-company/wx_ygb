.c-resouce {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: auto;
}

.c-resouce .resouce-share-btn {
    font-size: 30rpx;
    color: #ff5741;
    border: 1px solid #ff5741;
    border-radius: 5rpx;
    position: absolute;
    right: 34rpx;
    bottom: 50rpx;
    padding-left: 74rpx;
    padding-right: 32rpx;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
    line-height:1;
}

.c-resouce .resouce-share-btn::after {
    content: "";
    width: 29rpx;
    height: 29rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/resouce-icon.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-position: center center;
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translate3d(0, -50%, 0);
}

.c-resouce .resouce-msg {
    font-size: 32rpx;
    color: #fff;
    line-height: 36rpx;
    padding: 0 32rpx;
    box-sizing: border-box;
    /*max-width:650rpx;*/
}

.c-resouce .resouce-info {
    display: flex;
    align-items: center;
    padding-bottom: 50rpx;
    padding-top: 30rpx;
    padding-left: 34rpx;
    box-sizing: border-box;
}

.c-resouce .resouce-info .info-img {
    width: 78rpx;
    height: 78rpx;
    border-radius: 50%;
    margin-right: 15rpx;
}

.c-resouce .resouce-info .info-name {
    font-size: 30rpx;
    color: #999;
    margin-right: 15rpx;
}

.c-resouce .resouce-info .info-tag {
    font-size: 24rpx;
    color: #ff9c00;
    padding-right:30rpx;
    position: relative;
}

.c-resouce .resouce-info .info-tag::after {
    content: '';
    width: 23rpx;
    height: 23rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/icon-v.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-position: center center;
    position: absolute;
    right: 0rpx;
    top: 50%;
    transform: translate3d(0, -50%, 0);
}
