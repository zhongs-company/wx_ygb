// components/cmsg/index.js
Component({
    /**
     * 组件的属性列表
     */
    properties: {
        isShowMenu: {
            type: Boolean,
            value: false
        }
    },

    /**
     * 组件的初始数据
     */
    data: {
       
    },

    /**
     * 组件的方法列表
     */
    methods: {
        showMenu() {
            this.setData({
                isShowMenu: true
            });
        },
        hideMenu() {
            this.setData({
                isShowMenu: false
            });
        },
        stopPropagation() {
            return;
        }
    }
})