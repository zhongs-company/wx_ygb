<view class="c-resouce">
    <button class="resouce-share-btn" open-type="share" indtap="onShare">分享</button>
    <view class="resouce-msg" wx:if="{{ message }}">{{ message }}</view>
    <view class="resouce-info">
        <image class="info-img" src="{{icon}}" wx:if="{{icon}}"></image>
        <view class="info-name" wx:if="{{nikeName}}">{{nikeName}}</view>
        <view class="info-tag">主持人</view>
    </view>
</view>