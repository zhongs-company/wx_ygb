page {
    background-color: #f5f5f5;
}

.prize-item {
    background-color: #fff;
    margin-bottom: 19rpx;
    border-bottom: 0.5px solid #ececec;
    border-top: 0.5px solid #ececec;
    padding: 0 35rpx;
}

.prize-item .item-header {
    height: 89rpx;
    border-bottom: 0.5px solid #ececec;
    display: flex;
    align-items: center;
}

.prize-item .item-header .header-left {
    font-size: 26rpx;
    color: #999;
    max-width: 470rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: flex;
    align-items: center;
}

.prize-item .item-header .header-left .left-logo {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    display: inline-block;
}

.prize-item .item-header .header-left .left-p {
    line-height: 32rpx;
    padding-left: 20rpx;
}

.prize-item .item-header .header-right {
    font-size: 26rpx;
    flex: 1;
    text-align: right;
}

.prize-item .item-header .red {
    color: #ff5741;
}

.prize-item .item-header .gray {
    color: #999;
}

.prize-item .item-content {
    display: flex;
    padding: 30rpx 0;
    border-bottom: 0.5px solid #ececec;
}

.prize-item .item-content .content-img {
    width: 170rpx;
    height: 170rpx;
    border-radius: 5rpx;
    margin-right: 40rpx;
}

.prize-item .item-content .content-font {
    flex: 1;
}

.prize-item .item-content .content-font .font-p {
    font-size: 35rpx;
    color: #353535;
    line-height: 42rpx;
    padding-top: 20rpx;
}

.prize-item .item-content .content-font .font-p1 {
    font-size: 26rpx;
    color: #999;
    line-height: 63rpx;
}

.prize-item .item-content .content-num {
    font-size: 30rpx;
    color: #999;
}

.prize-item .item-footer {
    display: flex;
    height: 100rpx;
    justify-content: space-between;
    align-items: center;
}

.prize-item .item-footer .footer-left {
    font-size: 28rpx;
    color: #999;
}

.prize-item .item-footer .footer-right {
    font-size: 28rpx;
    color: #333;
}

.dfh-status {
    height: 98rpx;
    line-height: 98rpx;
    color: #fff;
    font-size: 32rpx;
    background-color: #ff5741;
    text-indent: 90rpx;
    background-size: 30rpx 38rpx;
    background-repeat: no-repeat;
    background-position: 32rpx 32rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/dfh-status.png);
}

.dfh-address {
    background-color: #fff;
    padding:20rpx 20rpx 40rpx;
    box-sizing: border-box;
    margin-bottom: 40rpx;
     background-size: 57rpx 9rpx;
    background-repeat: repeat-x;
    background-position: left bottom;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/dfh-line.jpg);
}

.dfh-address .address-top {
    display: flex;
    padding:16rpx 0;
}

.dfh-address .address-top .top-left {
    flex:1;
    color: #999;
    font-size: 30rpx;
    padding-left:20rpx;
}

.dfh-address .address-top .top-msg {
    color: #333;
    font-size: 30rpx;
    line-height: 44rpx;
    width: 534rpx;
}
