
.index-banner {
    height: 480rpx;
    position: relative;
    overflow: hidden;
    text-align: center;
}

.image-blur {
    width: 200%;
    height: 200%;
    -webkit-filter: blur(80rpx);
    filter: blur(80rpx);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    z-index: -1;
    background-size: 200% 200%;
    background-repeat: no-repeat;
    background-position: center center;
}

.index-banner .image-wrap {
    display: inline-block;
    margin-top: 32rpx;
    position: relative;
}

.index-banner .float-banner {
    position: fixed;
    top: 28rpx;
    left: 20rpx;
    margin-top: 0;
    z-index: 3;
}

.index-banner .image-wrap .image-banner {
    width: 320rpx;
    height: 320rpx;
}

.index-banner .float-banner .image-banner {
    width: 140rpx;
    height: 140rpx;
}

.index-play-btn {
    width: 106rpx;
    height: 106rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    background-image: url(http://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/icon-play-btn.png);
    background-size: 100% 100%;
    background-repeat: no-repeat;
    background-position: center center;
}

.index-banner .float-banner .index-play-btn {
    width: 64rpx;
    height: 64rpx;
}

