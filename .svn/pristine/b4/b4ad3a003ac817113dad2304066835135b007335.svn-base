page {
    background-color: #ed453a;
    padding-top: 30rpx;
    box-sizing: border-box;
}

.smzq-block {
    background-color: #fff;
    text-align: center;
    width: 698rpx;
    margin: 0 auto 20rpx;
    border-radius: 10rpx;
    padding-top:60rpx;

    background-size: 207rpx 255rpx;
    background-position: 517rpx -60rpx;
    background-repeat: no-repeat;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/ygq-gq.png);
}

.smzq-block .block-t {
    color: #9b9b9b;
    font-size: 48rpx;
    padding-bottom: 20rpx;
}

.smzq-block .block-icon {
    margin: 0 auto;
    width: 257rpx;
    height: 220rpx;
    background-size: 257rpx 220rpx;
    background-position: center center;
    background-repeat: no-repeat;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/ygq-icon.png);
}

.smzq-block .block-p {
    font-size: 36rpx;
    color: #333;
    line-height: 98rpx;
    padding-top: 30rpx;
}

.smzq-block .block-p1 {
    line-height: 120rpx;
    font-size: 80rpx;
    color: #ed453a;
    font-weight: bold;
    padding: 5rpx 0;
}

.smzq-block .block-p2 {
    font-size: 28rpx;
    color: #999;
    line-height: 67rpx;
    padding-bottom:40rpx;
}

.smzq-block .block-p3 {
    font-size: 30rpx;
    color: #333;
    line-height: 70rpx;
    padding-bottom: 40rpx;
    padding-top: 20rpx;
}

.smzq-block .block-p3 .red {
    color: #ed453a;
    display: inline-block;
}

.smzq-block .block-btn {
    width: 372rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    border-radius: 10rpx;
    font-size: 34rpx;
    background-color: #ed453a;
    margin: 50rpx auto;
}

.smzq-block .block-box {
    position: relative;
    border-top: 0.5px dashed #cacaca;
    padding: 0rpx 20rpx 20rpx;
}

.smzq-block .block-box::after {
    content: '';
    width: 27rpx;
    height: 27rpx;
    border-radius: 50%;
    background-color: #ed453a;
    position: absolute;
    top: 0;
    left: 0;
    transform: translate(-50%, -50%);
}

.smzq-block .block-box::before {
    content: '';
    width: 27rpx;
    height: 27rpx;
    border-radius: 50%;
    background-color: #ed453a;
    position: absolute;
    top: 0;
    right: 0;
    transform: translate(50%, -50%);
}

.smzq-block .block-box .box-title {
    display: flex;
    box-sizing: border-box;
    padding: 0 20rpx;
    height: 80rpx;
    align-items: center;
}

.smzq-block .block-box .box-title .title-logo {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
}

.smzq-block .block-box .box-title .title {
    font-size: 26rpx;
    color: #999;
}

.smzq-block .block-box .box-con {
    position: relative;
    min-height: 140rpx;
    text-align: right;
}

.smzq-block .block-box .box-con .con-img {
    width: 120rpx;
    height: 120rpx;
    border-radius: 3rpx;
    position: absolute;
    left: 20rpx;
    top: 0;
}

.smzq-block .block-box .box-con .con-p {
    font-size: 28rpx;
    color: #353535;
}

.smzq-block .block-box .box-con .con-p1 {
    font-size: 30rpx;
    color: #999999;
    padding-left:150rpx;
    line-height: 56rpx;
}


/*3  */

.smzq-list {
    width: 698rpx;
    margin: 0 auto 20rpx;
    border-radius: 10rpx;
    background-color: #fff;
    padding: 0 28rpx;
    box-sizing: border-box;
}

.smzq-list .list-item {
    display: flex;
    align-items: center;
    min-height: 99rpx;
}

.smzq-list .list-item:not(:last-child) {
    border-bottom: 0.5px solid #e7e7e7;
}

.smzq-list .list-item .item-font {
    font-size: 28rpx;
    color: #999;
    width: 160rpx;
}

.smzq-list .list-item .item-data {
    font-size: 28rpx;
    color: #353535;
    flex: 1;
    text-align: right;
}
