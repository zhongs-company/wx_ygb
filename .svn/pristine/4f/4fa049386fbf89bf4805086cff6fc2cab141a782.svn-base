
.end-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    height: 110rpx;
    line-height: 110rpx;
    font-size: 30rpx;
    background-color: rgba(255, 255, 255, 0.05);
    z-index:10;
    border-top:0.5px solid #e6e6e6;
}

.end-footer .footer-btn {
    flex: 1;
    text-align: center;
}

.end-footer .left-btn {
    color: #999999;
    display: flex;
    align-items: center;
    justify-content: center;
    position:relative;
}

.end-footer .left-btn::after{
	content:'';
	width:0.5px;
	height:48rpx;
	position:absolute;
	right:0;
	top:50%;
	transform:translate3d(0,-50%,0);
	background-color:#e6e6e6;
}

.end-footer .left-btn::before {
    content: '';
    margin-right: 10rpx;
    display: inline-block;
    width: 39rpx;
    height: 34rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/home-icon1.png);
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
}

.end-footer .right-btn {
    color: #ff5741;
}

.end-footer .right-btn::before {
    content: '';
    margin-right: 10rpx;
    display: inline-block;
    width: 34rpx;
    height: 34rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/user-icon3.png);
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
}