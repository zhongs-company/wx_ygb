page {
    height: 100%;
    background-color: #ed453a;
}

.package-box {
    min-height: 100%;
    padding-top: 84rpx;
    text-align: center;
    position: relative;
}

.package-box::after {
    content: '';
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/jb1.png);
    background-size: 100% 100%;
    background-position: top center;
    background-repeat: no-repeat;
    width: 110rpx;
    height: 166rpx;
    position: absolute;
    right: 0;
    top: 60rpx;
}

.package-box::before {
    content: '';
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/jb2.png);
    background-size: 100% 100%;
    background-position: top center;
    background-repeat: no-repeat;
    width: 64rpx;
    height: 121rpx;
    position: absolute;
    left: 0;
    top: 341rpx;
}

.package-box .head {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    box-shadow: 0 0 0 10rpx #ed453a;
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
    margin: 0 auto;
}


.package-box .win-list {
    width: 680rpx;
     height: 782rpx; 
    background-color: #fffcf3;
    border-radius: 10rpx;
    margin: 40rpx auto;
    box-sizing: border-box;
    padding: 22rpx 32rpx;
}

.package-box .win-list .li-title {
    font-size: 32rpx;
    color: #dc4136;
}

.package-box .win-list .li-title .title {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    height: 65rpx;
    font-size: 32rpx;
    font-weight: 600;
}

.package-box .win-list .li-title .title::after {
    content: '';
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/jb-left-icon.png);
    background-size: 100% 100%;
    background-position: top center;
    background-repeat: no-repeat;
    width: 46rpx;
    height: 30rpx;
    display: inline-block;
    margin-left: 35rpx;
}

.package-box .win-list .li-title .title::before {
    content: '';
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/jb-left-icon.png);
    background-size: 100% 100%;
    background-position: top center;
    background-repeat: no-repeat;
    width: 46rpx;
    height: 30rpx;
    display: inline-block;
    margin-right: 35rpx;
}

.package-box .win-list .li-title .user-msg {
    font-size: 26rpx;
    color: #ff665e;
    line-height: 57rpx;
}

.package-box .win-list .li {
    height: 130rpx;
    position: relative;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
}

.package-box .win-list .li:not(:last-child){
    border-bottom: 1px solid #e9e9e9;
}

.package-box .win-list .li .li-center {
    flex: 1;
    text-align: left;
    padding-left: 15rpx;
}

.package-box .win-list .li .li-head {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.package-box .win-list .li .li-name {
    font-size: 26rpx;
    color: #333;
    line-height: 42rpx;
    max-width: 200rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.package-box .win-list .li .li-time {
    font-size: 24rpx;
    color: #999;
    line-height: 35rpx;
}

.package-box .win-list .li .li-money {
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
}