.image-blur {
    width: 100%;
    height: 100%;
    -webkit-filter: blur(100rpx);
    filter: blur(100rpx);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    z-index: -1;
    background-size: 230% 230%;
    background-repeat: no-repeat;
    background-position: center center;
    opacity: 0.7;
}

page {
    height: 100%;
    width: 100%;
}

page::after {
    content: '';
    z-index: -1;
    position: absolute;
    top: 242rpx;
    left: 0;
    width: 750rpx;
    height: 179rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/bgstyle-icon.png);
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
}

.room-bg {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    position: absolute;
    z-index: -2;
    background-color: rgba(43, 43, 43, 1);
}


.top-topic {
    text-align: center;
    height: 596rpx;
    position: relative;
    padding-top: 32rpx;
    box-sizing: border-box;
    transition: all ease-out 0.5s;
}

.top-topic .topic-CD {
    position: absolute;
    top: 165rpx;
    left: 50%;
    border-radius: 50%;
    /* margin-left: -205rpx; */
    overflow: hidden;
    /* border: 10rpx solid rgba(255, 255, 255, 0.6); */
    box-shadow: 0 0 0 10rpx rgba(255, 255, 255, 0.2);
    transition: transform ease-out 0.5s;
    transform: translate(-50%, 0%) scale(1, 1);
}

.top-topic .topic-CD .CD {
    border-radius: 50%;
    height: 410rpx;
    width: 410rpx;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-position: center center;
    overflow: hidden;
}

.end-title {
    font-size: 40rpx;
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    margin-top: 60rpx;
}

.end-title::after {
    content: '';
    display: inline-block;
    width: 132rpx;
    height: 0.5px;
    background-color: #fff;
    margin-left: 100rpx;
}


.end-title::before {
    content: '';
    display: inline-block;
    width: 132rpx;
    height: 0.5px;
    background-color: #fff;
    margin-right: 100rpx;
}




.end-p {
    line-height: 102rpx;
    font-size: 42rpx;
    color: #fff;
    text-align: center;
    padding-top: 45rpx;
}


.end-p1 {
    font-size: 36rpx;
    color: rgba(255, 255, 255, 0.4);
    text-align: center;
    line-height: 102rpx;
}

.end-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    height: 110rpx;
    line-height: 110rpx;
    font-size: 30rpx;
    background-color: rgba(255, 255, 255, 0.05);
}

.end-footer .footer-btn {
    flex: 1;
    text-align: center;
}

.end-footer .left-btn {
    color: #ff5741;
    display: flex;
    align-items: center;
    justify-content: center;
}

.end-footer .left-btn::before {
    content: '';
    margin-right: 10rpx;
    display: inline-block;
    width: 39rpx;
    height: 34rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/home-icon.png);
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
}

.end-footer .right-btn {
    color: rgba(255, 255, 255, 0.4);
}

.end-footer .right-btn::before {
    content: '';
    margin-right: 10rpx;
    display: inline-block;
    width: 34rpx;
    height: 34rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/user-icon1.png);
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
}