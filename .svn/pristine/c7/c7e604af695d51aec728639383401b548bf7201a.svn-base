.wallet-header {
    background-color: #ff5741;
    color: #fff;
    text-align: center;
    padding-top: 35rpx;
    padding-bottom: 60rpx;
}

.wallet-header .header-icon {
    margin: 0 auto;
    width: 211rpx;
    height: 209rpx;
    background-size: 211rpx 209rpx;
    background-position: center center;
    background-repeat: no-repeat;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/qb.png);
    text-align: center;
}

.wallet-header .header-p {
    font-size: 32rpx;
    line-height: 40rpx;
    padding-bottom: 10rpx;
}

.wallet-header .header-p1 {
    font-size: 80rpx;
    font-weight: bold;
}

.wallet-header .header-p1 .min {
    font-size: 32rpx;
    display: inline-block;
}

.wallet-header .header-btn {
    width: 378rpx;
    height: 84rpx;
    border-radius: 10rpx;
    border: 1px solid #fff;
    text-align: center;
    line-height: 84rpx;
    font-size: 36rpx;
    margin: 40rpx auto 0;
}

.wallet-title {
    border-bottom: 0.5px solid #e2e2e2;
    font-size: 32rpx;
    color: #333;
    height: 100rpx;
    line-height: 100rpx;
    text-indent: 100rpx;
    background-size: 38rpx 38rpx;
    background-position: 32rpx 30rpx;
    background-repeat: no-repeat;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/jyjl.png);
}

.wallet-item {
    padding: 0 30rpx;
    box-sizing: border-box;
}

.wallet-item .item {
    height: 156rpx;
    border-bottom: 0.5px solid #e2e2e2;
    display: flex;
    align-items: center;
}

.wallet-item .item-logo {
    width: 66rpx;
    height: 66rpx;
    border-radius: 50%;
}

.wallet-item .item-font {
    width: 400rpx;
    padding-left:40rpx;

}

.wallet-item .item-font .font-p {
    font-size: 30rpx;
    color: #333;
    line-height: 50rpx;
}

.wallet-item .item-font .font-p1 {
    line-height: 45rpx;
    font-size: 24rpx;
    color: #999;
}

.wallet-item .item-m {
    color: #333;
     font-size: 42rpx;
     flex:1;
     text-align: right;
}
