@import '../c-voice-ani';

.c-header {
    padding: 0 32rpx;
    border-bottom: 0.5px solid #f1f0f0;
    box-shadow: 0 13rpx 0 0 #f6f6f6;
    margin-bottom: 13rpx;
}

.c-header .header-top {
    display: flex;
    padding: 40rpx 0;
    border-bottom: 0.5px solid #f1f0f0;
}

.c-header .header-top .top-logo {
    width: 180rpx;
    height: 180rpx;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-position: center center;
}

.c-header .header-top .top-p {
    line-height: 98rpx;
    flex: 1;
    padding-left: 28rpx;
}

.c-header .header-top .top-p .p1 {
    font-size: 32rpx;
    color: #333;
}

.c-header .header-top .top-p .p2 {
    font-size: 26rpx;
    color: #999;
    line-height: 42rpx;
}

.c-header .header-top .top-btn {
    padding-left: 62rpx;
    padding-right: 28rpx;
    border-radius: 10rpx;
    background-color: #ff5741;
    font-size: 26rpx;
    color: #fff;
    line-height: 69rpx;
    position: absolute;
    right: 32rpx;
    top: 60rpx;
    background-size: 24rpx 21rpx;
    background-position: 26rpx 25rpx;
    background-repeat: no-repeat;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/haret-icon.png);
}

.c-header .header-compere-list {
    display: flex;
    padding-top: 18rpx;
    padding-bottom: 25rpx;
}

.c-header .header-compere-list .list-label {
    box-sizing: border-box;
    font-size: 24rpx;
    font-style: italic;
    color: #ff5741;
    padding-top: 60rpx;
    padding-left: 59rpx;
    width: 200rpx;
    height: 95rpx;
    background-size: 161rpx 72rpx;
    background-position: -24rpx 23rpx;
    background-repeat: no-repeat;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/compere-icon.png);
}

.c-header .header-compere-list .list-item {
    flex: 1;
    display: flex;
    overflow: auto;
}

.c-header .header-compere-list .list-item .item {
    margin-right: 35rpx;
}

.c-header .header-compere-list .list-item .item .item-head {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.c-header .header-compere-list .list-item .item .item-name {
    font-size: 22rpx;
    color: #ff5741;
    line-height: 32rpx;
    padding: 0 18rpx;
    border-radius: 16rpx;
    margin-top: -8rpx;
}

.c-header .header-compere-list .list-item .item:nth-child(1) .item-name{
    background-color: #ffefd8;
}

.c-header .header-compere-list .list-item .item:nth-child(2) .item-name {
    background-color: #ffe1dd;
}















/*type*/

.c-compere {
    box-sizing: border-box;
    padding-left: 32rpx;
    padding-right: 32rpx;
    padding-bottom: 29rpx;
    padding-top: 29rpx;
    border-bottom: 0.5px solid #f1f0f0;
    border-top: 0.5px solid #f1f0f0;
    box-shadow: 0 13rpx 0 0 #f6f6f6;
    margin-bottom: 13rpx;
}

.c-compere .compere-type {
    padding-left: 95rpx;
    box-sizing: border-box;
    position: relative;
}

.c-compere .compere-type .type-head {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    position: absolute;
    left: 0;
    top: 0rpx;
}

.c-compere .compere-type .type-info {
    line-height: 46rpx;
    display: flex;
    /* padding-left: 18rpx; */
}

.c-compere .compere-type .type-info .info-name {
    font-size: 30rpx;
    color: #333333;
    padding-right: 15rpx;
}

.c-compere .compere-type .type-info .info-label {
    font-size: 26rpx;
    color: #ffa800;
    padding-right: 20rpx;
    position: relative;
}

.c-compere .compere-type .type-info .info-label::after {
    content: '';
    width: 22rpx;
    height: 21rpx;
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/icon-v.png);
    display: inline-block;
}

.c-compere .compere-type .type-info .info-time {
    font-size: 22rpx;
    color: #999;
}

.c-compere .compere-type .type-msg {
    font-size: 30rpx;
    color: #333333;
    padding-right: 15rpx;
    line-height: 50rpx;
    padding: 10rpx 0 18rpx 0rpx;
}














/* entity*/

.c-compere .compere-type .type-entity {
    height: 150rpx;
    background-color: #f1f1f1;
    display: flex;
    align-items: center;
}

.c-compere .compere-type .type-entity .entity-img {
    width: 130rpx;
    height: 130rpx;
    border-radius: 10rpx;
    margin-right: 25rpx;
    margin-left: 12rpx;
}

.c-compere .compere-type .type-entity .entity-info {
    flex: 1;
}

.c-compere .compere-type .type-entity .entity-info .info-p {
    font-size: 30rpx;
    line-height: 55rpx;
    color: #666666;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.c-compere .compere-type .type-entity .entity-info .info-p1 {
    font-size: 24rpx;
    line-height: 50rpx;
    color: #ff5741;
}









/*type-images*/

.c-compere .compere-type .type-images {
    position: relative;
    display: flex;
}

.c-compere .compere-type .type-images .image {
    width: 190rpx;
    height: 190rpx;
    margin-right: 23rpx;
}

.c-compere .compere-type .type-images .image:nth-child(3n) {
    margin-right: 0;
}

.c-compere .compere-type .type-images .images-label {
    position: absolute;
    right: 0;
    bottom: 0;
    line-height: 40rpx;
    padding: 0 20rpx;
    font-size: 22rpx;
    color: #fff;
    border-top-left-radius: 10rpx;
    background-color: rgba(0, 0, 0, 0.3);
}









/*map*/

.c-compere .compere-type .type-map {
    border-radius: 5rpx;
    border: 1px solid #e5e5e5;
    overflow: hidden;
    padding-top: 18rpx;
    margin-top: 20rpx;
}


.c-compere .compere-type .type-map .map-p {
    font-size: 30rpx;
    line-height: 44rpx;
    color: #666666;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 0 20rpx;
}

.c-compere .compere-type .type-map .map-p1 {

    font-size: 24rpx;
    line-height: 39rpx;
    color: #b0b0b0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 0 20rpx;
    padding-bottom: 18rpx;
}

.c-compere .compere-type .type-map .map-img {
    width: 608rpx;
    height: 130rpx;
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/list-map-icon.jpg);
}






/*type-image*/

.c-compere .compere-type .type-image {
    width: 325rpx;
    height: 328rpx;
    margin-top: 20rpx;
}

.c-compere .compere-type .type-image .image {
    width: 325rpx;
    height: 328rpx;
}




/*video*/

.c-compere .compere-type .type-video {
    width: 604rpx;
    height: 350rpx;
    position: relative;
}

.c-compere .compere-type .type-video .video-poster {
    width: 604rpx;
    height: 350rpx;
}

.c-compere .compere-type .type-video .video-play-btn {
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/paly-btn.png);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    width: 110rpx;
    height: 110rpx;
}

.c-compere .compere-type .type-video .video-time {
    font-size: 22rpx;
    color: #fff;
    position: absolute;
    right: 15rpx;
    bottom: 15rpx;
}


/*voice*/

.c-compere .compere-type .type-voice {
    width: 393rpx;
    height: 82rpx;
    border-radius: 41rpx;
    background-color: #ff5741;
    position:relative;
}

.c-compere .compere-type .type-voice::after{
    content:'';
    width:29rpx;
    height:39rpx;
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/list-audio-icon.png);
    position:absolute;
    left:-10rpx;
    top:40rpx;
}

.c-compere .compere-type .type-voice .voice-time{
     position:absolute;
    right:28rpx;
    top:50%;
    transform:translate3d(0,-50%,0);
    font-size:30rpx;
    color:#fff;
}

/* 弹窗  */
.care-popup{
    display: flex;
    align-items: center;
    justify-content: center;
}
.care-popup .care-box{
    width: 496rpx;
    background-color:#fff;
    border-radius: 10rpx;
    padding:45rpx 0;
    text-align: center;
}

.care-popup .care-box .care-title{
    color:#333333;
    font-size: 36rpx;
    line-height: 90rpx;
}

.care-popup .care-box .care-code{
    color:#ff5742;
    font-size: 54rpx;
    font-weight: bold;
    line-height: 90rpx;
}

.care-popup .care-box .care-msg{
     color:#999999;
    font-size: 28rpx;
    line-height: 48rpx;
}

.care-popup .care-box .care-btn{
    width:400rpx;
    height:78rpx;
    border-radius: 10rpx;
    background-color: #ff5742;
    text-align: center;
    line-height: 78rpx;
    margin: 30rpx auto;
    color:#fff;
    font-size: 32rpx;
}