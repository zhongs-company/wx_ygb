page {
    background-color: #efefef;
}

.get-header {
    padding: 0 64rpx;
    background-color: #fff;
    height: 100rpx;
    font-size: 32rpx;
    color: #999;
    display: flex;
    align-items: center;
    justify-content: center;
}

.get-header .header-item {
    flex: 1;
    text-align: center;
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.get-header .left-item::before {
    content: '';
    display: inline-block;
    margin-right: 27rpx;
    width: 36rpx;
    height: 33rpx;
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/get-smzq1.png);
}

.get-header .right-item::before {
    content: '';
    display: inline-block;
    margin-right: 27rpx;
    width: 46rpx;
    height: 30rpx;
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/get-kdwl.png);
}

.get-header .left-item.current-item::before {
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/get-smzq.png);
}

.get-header .right-item.current-item::before {
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/get-kdwl1.png);
}

.get-header .current-item {
    color: #ed453a;
}

.get-content {
    margin-top: 20rpx;
    padding: 0 64rpx 74rpx;
    background-color: #fff;
}

.get-input {
}

.get-input .input-box {
    border-bottom: 0.5px solid #ff775d;
    height: 111rpx;
    display: flex;
    align-items: center;
}

.get-input .input-box .font {
    font-size: 36rpx;
    color: #333;
    width: 98rpx;
    display: flex;
    justify-content: space-between;
}

.get-input .input-box .input {
    font-size: 32rpx;
    color: #000;
    flex: 1;
    padding-left: 56rpx;
    height: 100%;
    box-sizing: border-box;
}

.get-btn {
    border-radius: 10rpx;
    height: 89rpx;
    line-height: 89rpx;
    text-align: center;
    font-size: 36rpx;
    color: #fff;
    background-color: #ed453a;
    margin: 70rpx auto 50rpx;
    max-width: 622rpx;
}

.get-msg {
    font-size: 26rpx;
    color: #666;
}

.get-msg .msg-p {
    line-height: 58rpx;
    color:#999;
}

.get-list {
}

.get-list .list-item {
    color: #333;
    height: 264rpx;
}

.get-list .list-item .item-top {
    font-size: 36rpx;
    line-height: 82rpx;
    position: relative;
    padding-top: 45rpx;
}

.get-list .list-item .item-top::after {
    content: '';
    position: absolute;
    top: 63.5rpx;
    right: 0;
    width: 16rpx;
    height: 28rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/arrow-icon.png);
    background-size: 100% 100%;
    background-repeat: no-repeat;
    background-position: center center;
}

.get-list .list-item .item-address {
    font-size: 30rpx;
    width: 100%;
    line-height: 42rpx;
}

.get-select{
    font-size: 36rpx;
    color:#c0c0c0;
    text-align: center;
    padding-top:152rpx;
    position: relative;
}

.get-select::after{
    content: '';
    width:7rpx;
    height: 64rpx;
    border-radius: 3rpx;
    background-color:#e8e8e8;
    position: absolute;
    left:50%;
    top:58rpx;
    transform: translate(-50%, 0);
}
.get-select::before{
    content: '';
    width:64rpx;
    height: 7rpx;
    border-radius: 3rpx;
    background-color:#e8e8e8;
    position: absolute;
    left:50%;
    top:86rpx;
    transform: translate(-50%, 0);
}
