.image-blur {
    width: 100%;
    height: 100%;
    -webkit-filter: blur(100rpx);
    filter: blur(100rpx);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    z-index: -1;
    background-size: 230% 230%;
    background-repeat: no-repeat;
    background-position: center center;
    opacity: 0.7;
}

page {
    height: 100%;
    width: 100%;
}

page::after {
    content: '';
    z-index: -1;
    position: absolute;
    top: 242rpx;
    left: 0;
    width: 750rpx;
    height: 179rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/bgstyle-icon.png);
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
}

.room-bg {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    position: absolute;
    z-index: -2;
    background-color: rgba(43, 43, 43, 1);
}

.end-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    height: 110rpx;
    line-height: 110rpx;
    font-size: 30rpx;
    background-color: rgba(255, 255, 255, 1);
    z-index: 3;
}

.to-main-btn{
    position: absolute;
    right:0;
    top:50rpx;
    width:176rpx;
    height:60rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/to-main-btn.png);
    background-size: 100% 100%;
    background-position: center cetner;
    background-repeat: no-repeat;
    z-index: 2;
}

.end-footer .footer-btn {
    flex: 1;
    text-align: center;
}

.end-footer .left-btn {
    color: #ff5741;
    display: flex;
    align-items: center;
    justify-content: center;
}

.end-footer .left-btn::before {
    content: '';
    margin-right: 10rpx;
    display: inline-block;
    width: 39rpx;
    height: 34rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/home-icon.png);
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
}

.end-footer .right-btn {
    /* color: rgba(255, 255, 255, 0.4); */
    color: #999;
    display: flex;
    align-items: center;
    justify-content: center;
}

.end-footer .right-btn::before {
    content: '';
    margin-right: 10rpx;
    display: inline-block;
    width: 34rpx;
    height: 34rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/user-icon4.png);
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
    vertical-align: center;
}

/* header  */

.end-header {
    padding: 46rpx 38rpx;
    box-sizing: border-box;
    display: flex;
}

.end-header .header-banner {
    width: 244rpx;
    height: 244rpx;
}

.end-header .header-info {
    flex: 1;
    padding-left: 38rpx;
}

.end-header .header-info .info-title {
    font-size: 36rpx;
    line-height: 80rpx;
    color: #fff;
}

.end-header .header-info .info-p {
    font-size: 26rpx;
    line-height: 46rpx;
    color: rgba(255, 255, 255, 0.5);
    overflow: hidden;
    white-space:nowrap;
    text-overflow: ellipsis;
    max-width: 400rpx;
}

/* list  */

.end-list {
    background-color: #f8f8f8;
    min-height: 996rpx;
    padding-bottom:110rpx;
}

.end-list .list-title {
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 40rpx;
    border-bottom: 0.5px solid #e8e8e8;
}

.end-list .list-title .left {
    color: #333;
    font-size: 30rpx;
    position: relative;
    padding-left: 48rpx;
    line-height: 36rpx;
}

.end-list .list-title .left::after {
    content: '';
    width: 33rpx;
    height: 27rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/main-end-ting.png);
    background-size: 100% 100%;
    background-repeat: no-repeat;
    background-position: center center;
    position: absolute;
    left: 0;
    top: 50%;
    transform: translate3d(0, -50%, 0);
}

.end-list .list-title .right {
    color: #999;
    font-size: 26rpx;
    line-height: 36rpx;
}

.end-list .list-li {
    border-bottom: 0.5px solid #e8e8e8;
    padding: 24rpx 40rpx;
    position: relative;
}

.end-list .list-li .li-title {
    line-height: 46rpx;
    color: #333;
    font-size: 30rpx;
    max-width: 570rpx;
    padding-bottom: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
}

.end-list .list-li .li-time {
    line-height: 46rpx;
    color: #999;
    font-size: 24rpx;
}

.end-list .list-li .li-btn {
    width: 104rpx;
    height: 104rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/main-end-play.png);
    background-size: 52rpx 52rpx;
    background-repeat: no-repeat;
    background-position: center center;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translate3d(0, -50%, 0);
}
/* 当前li  */
.end-list .active-li .li-title{
    color:#ff5741;
}

.end-list .active-li .li-btn {
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/main-end-pause.png);
}

.end-list .active-li::after{
    content:'';
    width:6rpx;
    height:75rpx;
    background-color:#ff5741;
    position: absolute;
    left:0;
    top:50%;
    transform: translate(0,-50%);
}

.no-more{
    width:100%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 24rpx;
    color:#333;
    padding-top:20rpx;
}