.image-blur {
    width: 100%;
    height: 100%;
    -webkit-filter: blur(100rpx);
    filter: blur(100rpx);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    z-index: -1;
    background-size: 230% 230%;
    background-repeat: no-repeat;
    background-position: center center;
    opacity: 0.7;
}

page {
    height: 100%;
    width: 100%;
}

page::after {
    content: '';
    z-index: -1;
    position: absolute;
    top: 242rpx;
    left: 0;
    width: 750rpx;
    height: 179rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/bgstyle-icon.png);
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
}

.room-bg {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    position: absolute;
    z-index: -2;
    background-color: rgba(43, 43, 43, 1);
}



.end-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    height: 110rpx;
    line-height: 110rpx;
    font-size: 30rpx;
    background-color: rgba(255, 255, 255,1);
    z-index: 3;
}

.end-footer .footer-btn {
    flex: 1;
    text-align: center;
}

.end-footer .left-btn {
    color: #ff5741;
    display: flex;
    align-items: center;
    justify-content: center;
}

.end-footer .left-btn::before {
    content: '';
    margin-right: 10rpx;
    display: inline-block;
    width: 39rpx;
    height: 34rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/home-icon.png);
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
}

.end-footer .right-btn {
    /* color: rgba(255, 255, 255, 0.4); */
    color: #999999;
}

.end-footer .right-btn::before {
    content: '';
    margin-right: 10rpx;
    display: inline-block;
    width: 34rpx;
    height: 34rpx;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/user-icon4.png);
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
}