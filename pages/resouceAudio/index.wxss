@import '../c-voice-ani.wxss';

page {
    height: 100%;
    background-color: #000;
}

.audio-box {
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/resouce-audio-icon.png);
    background-size: 100% 100%;
    background-position: center center;
    background-repeat: no-repeat;
    width:497rpx;
    height:112rpx;
    line-height: 112rpx;
    position: absolute;
    top:40%;
    left:50%;
    transform:translate3d(-50%,-50%,0);
    font-size: 36rpx;
    color:#fff;
}

.audio-box .audio-font{
    text-align: center;
}

.audio-ani-box{
    left:60rpx;
}

.audio-time{
    font-size: 37rpx;
    color:#fff;
    position: absolute;
    right: -60rpx;
    top:50%;
    transform: translate3d(0,-50%,0);
}