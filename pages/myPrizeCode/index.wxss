page {
    min-height: 100%;
    background-color: #ed453a;
    background-image: url(https://1251097942.cdn.myqcloud.com/1251097942/platform/miniApp/shake_broadcast_images/enrity-bg1.jpg);
    background-size: 750rpx 435rpx;
    background-position: top center;
    background-repeat: no-repeat;
    padding-top:187rpx;
    box-sizing: border-box;
    text-align: center;
    margin-bottom:20rpx;
}

.auto-p {
    font-size: 32rpx;
    color: #ffea3d;
    line-height: 50rpx;
}

.auto-p1 {
    font-size: 32rpx;
    color: #fff;
    line-height: 50rpx;
}

.auto-content {
    border-radius: 10rpx;
    width: 680rpx;
    margin: 50rpx auto;
    background-color: #fff;
    overflow: hidden;
}

.auto-content .cotent-header {
    display: flex;
    background-color: #faf4f3;
    line-height: 113rpx;
    padding:0 25rpx;
}

.auto-content .cotent-header .header-left {
    font-size: 30rpx;
    color: #da3126;
    max-width: 350rpx;
}

.auto-content .cotent-header .header-right {
    font-size: 24rpx;
    color: #999;
    display: flex;
    align-items: center;
    flex:1;
    justify-content: flex-end;
}

.auto-content .cotent-header .header-right .right-logo {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.auto-content .content-p {
    font-size: 36rpx;
    color: #333;
    padding-top:69rpx;
    line-height: 80rpx;
}

.auto-content .content-code {
    font-size: 80rpx;
    color: #ed453a;
    padding-bottom:15rpx;
    font-weight: bold;
    line-height: 105rpx;
}

.auto-content .content-p1 {
    font-size: 28rpx;
    color: #999;
    line-height: 69rpx;
}

.auto-content .content-p1 .yellow {
    color: #ed453a;
    display: inline-block;
}

.auto-content .content-footer {
    font-size: 28rpx;
    box-sizing: border-box;
    padding:60rpx 38rpx 45rpx;
    border-top:0.5px dashed #cacaca;
    margin-top:80rpx;
    position: relative;
}

.auto-content .content-footer::after{
    content: '';
    width:27rpx;
    height:27rpx;
    border-radius: 50%;
    background-color:#ed453a;
    position: absolute;
    top:0;
    left:0;
    transform: translate(-50%,-50%);
}

.auto-content .content-footer::before{
    content: '';
    width:27rpx;
    height:27rpx;
    border-radius: 50%;
    background-color:#ed453a;
    position: absolute;
    top:0;
    right:0;
    transform: translate(50%,-50%);
}
.auto-content .content-footer .footer-item {
    color: #999;
    line-height: 46rpx;
    text-align: left;
}

.auto-content .content-footer .footer-item:not(:last-child){
    padding-bottom: 25rpx;
}

.auto-content .content-footer .footer-item .item-title {
    color: #333;
    width:135rpx;
    display: inline-block;
}
