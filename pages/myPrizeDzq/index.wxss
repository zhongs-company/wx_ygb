.smzq-list {
    width: 698rpx;
    margin: 0 auto 20rpx;
    border-radius: 10rpx;
    background-color: #fff;
    padding:0 28rpx;
    box-sizing: border-box;
}

.smzq-list .list-item {
    display: flex;
    align-items: center;
    min-height: 99rpx;
}

.smzq-list .list-item:not(:last-child){
    border-bottom: 0.5px solid #e7e7e7;
}

.smzq-list .list-item .item-font {
    font-size: 28rpx;
    color: #999;
    width: 160rpx;
}

.smzq-list .list-item .item-data {
    font-size: 28rpx;
    color: #353535;
    flex:1;
    text-align: right;
}
