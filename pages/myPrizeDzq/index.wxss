page {
    background-color: #ed453a;
    padding-top: 30rpx;
    box-sizing: border-box;
    padding-bottom:30rpx;
}

.smzq-block {
    background-color: #fff;
    text-align: center;
    width: 698rpx;
    margin: 0 auto 20rpx;
    border-radius: 10rpx;
}

.smzq-block .block-p {
    font-size: 36rpx;
    color: #333;
    line-height: 98rpx;
    padding-top: 30rpx;
}

.smzq-block .block-p1 {
    line-height: 120rpx;
    font-size: 80rpx;
    color: #ed453a;
    font-weight: bold;
    padding: 5rpx 0;
}

.smzq-block .block-p2 {
    font-size: 28rpx;
    color: #999;
    line-height: 67rpx;
}

.smzq-block .block-p3 {
    font-size: 30rpx;
    color: #333;
    line-height: 70rpx;
}

.smzq-block .block-p3 .red {
    color: #ed453a;
    display: inline-block;
}

.smzq-block .block-btn {
    width: 372rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    border-radius: 10rpx;
    font-size: 34rpx;
    background-color: #ed453a;
    margin: 50rpx auto;
}

.smzq-block .block-box {
    position: relative;
    display: flex;
    border-top: 0.5px dashed #cacaca;
    padding: 60rpx 20rpx;
}

.smzq-block .block-box::after {
    content: '';
    width: 27rpx;
    height: 27rpx;
    border-radius: 50%;
    background-color: #ed453a;
    position: absolute;
    top: 0;
    left: 0;
    transform: translate(-50%, -50%);
}

.smzq-block .block-box::before {
    content: '';
    width: 27rpx;
    height: 27rpx;
    border-radius: 50%;
    background-color: #ed453a;
    position: absolute;
    top: 0;
    right: 0;
    transform: translate(50%, -50%);
}

.smzq-block .block-box .box-title {
    font-size: 28rpx;
    color: #333;
    line-height: 50rpx;
    width: 138rpx;
}

.smzq-block .block-box .box-msg {
    font-size: 28rpx;
    color: #999;
    flex: 1;
    text-align: left;
    line-height: 50rpx;
}

/* prize  */

.prize-item {
    margin-bottom: 19rpx;
    border-bottom: 0.5px solid #ececec;
    border-top: 0.5px solid #ececec;
    padding: 0 35rpx;
    width: 698rpx;
    margin: 0 auto 20rpx;
    background-color: #fff;
    box-sizing: border-box;
    border-radius: 10rpx;
}

.prize-item .item-header {
    height: 89rpx;
    border-bottom: 0.5px solid #ececec;
    display: flex;
    align-items: center;
}

.prize-item .item-header .header-left {
    font-size: 26rpx;
    color: #999;
    max-width: 470rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: flex;
    align-items: center;
}

.prize-item .item-header .header-left .left-logo {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    display: inline-block;
}

.prize-item .item-header .header-left .left-p {
    line-height: 32rpx;
    padding-left: 20rpx;
}

.prize-item .item-header .header-right {
    font-size: 26rpx;
    flex: 1;
    text-align: right;
}

.prize-item .item-header .red {
    color: #ff5741;
}

/* 
.prize-item .item-header .gray{
	color:#999999;
} */

.prize-item .item-content {
    padding: 25rpx 0;
    position: relative;
    text-align: right;
    min-height: 120rpx;
}

.prize-item .item-content .content-img {
    width: 120rpx;
    height: 120rpx;
    border-radius: 5rpx;
    position: absolute;
    left: 0;
    top: 25rpx;
}

.prize-item .item-content .content-p {
    font-size: 28rpx;
    line-height: 44rpx;
    color: #353535;
    padding-left: 130rpx;
    box-sizing: border-box;
}

.prize-item .item-content .content-p1 {
    font-size: 30rpx;
    line-height: 59rpx;
    color: #999;
}

